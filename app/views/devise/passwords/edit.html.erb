<h2>Chambiar tu password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, "data-ajax"=>"false") do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, "Password nuevo" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar password nuevo" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar mi password", "class"=>"ui-link ui-btn ui-btn-inline ui-shadow ui-corner-all" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
