<h2>Olvidaste tu password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, "data-ajax"=>"false") do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Enviar instrucciones de recuperacion", "data-role" =>"button", "data-inline" => "true" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
