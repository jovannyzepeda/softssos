<p id="notice"><%= notice %></p>

<h1 class="alert alert-success" >Lista de Roles</h1>

<table class="table table-bordered ui-responsive" data-role="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Precio hora</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rols.each do |rol| %>
      <tr>
        <td><%= rol.nombre %></td>
        <td><%= rol.precio_hora %></td>
        <td><%= link_to 'Ver', rol %></td>
        <td><%= link_to 'Editar', edit_rol_path(rol) %></td>
        <td><%= link_to 'Destruir', rol, method: :delete, data: { confirm: 'Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear un rol', new_rol_path, "data-role" => "button", "data-inline" => "true", "data-theme" => "b"  %>
